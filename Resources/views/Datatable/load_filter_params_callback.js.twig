
        var controls = document.querySelectorAll("table.dataTable thead tr:nth-child(2) td");
        var data = JSON.parse( localStorage.getItem( 'DataTables_{{ selector }}') );
        var columsObject = data.columns;

        var i = 0, nbHidden = 0;
        while(undefined !== columsObject[i]){
            if(columsObject[i].visible == true){
                var oControl = controls[i-nbHidden];
                if(oControl.children[0]){
                    //oControl.children[0].onchange = inputChange;


                    //oControl.children[0].onchange(oControl.children[0]);
                    $('.individual_filtering').bind('input change', function () {
                        var text = $(this).val();

                        if (text.length > 0){
                            $(this).css('box-shadow', '0px 0px 1px 1px #3498db');
                        }
                        else{
                            $(this).css('box-shadow', '0px 0px 0px 0px #000000');
                        }
                    });
                    oControl.children[0].value = columsObject[i].search.search;
                    $('.individual_filtering').trigger('change');
                }
            }else{
                nbHidden++;
            }


            i++;

        }
